
<%= render partial:"forecast/form", locals: { current_location: @current_location } %>

<div class="container mx-auto">

  <%= render partial: "forecast/results", locals: { forecast: @forecast[:forecast], timestamp: @forecast[:timestamp], cached: @forecast[:cache_age].present? } %>

</div>

<%= javascript_tag do %>
  document.documentElement.classList.toggle("dark", <%= @forecast.dig("forecast","current", "is_day")  == 0 %>);
<% end %>
